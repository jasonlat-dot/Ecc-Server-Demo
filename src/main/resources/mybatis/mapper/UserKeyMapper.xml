<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.jasonlat.infrastructure.persistent.dao.IUserKeyDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="io.github.jasonlat.infrastructure.persistent.po.UserKey">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="username" property="username" />
        <result column="publicX" property="publicX" />
        <result column="publicY" property="publicY" />
        <result column="status" property="status" />
    </resultMap>
    <select id="queryUserPublicKey" resultType="io.github.jasonlat.infrastructure.persistent.po.UserKey">
        SELECT user_id, username, publicX, publicY
        FROM `user_key`
        WHERE user_id = #{user} OR username = #{user} limit 1
    </select>

</mapper>
